{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "./build",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "target": "es5",
        "downlevelIteration": true,
        "lib": [
            "DOM",
            "ES6",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "types": [
            "jquery"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/ts/*"
    ]
}